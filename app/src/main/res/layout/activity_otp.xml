<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/whatsapp_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTP_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/background_curve">

        </LinearLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:fillViewport="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="50dp"
                    android:id="@+id/backbtn"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/backbtn"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_back"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/confirmPasswordTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmation Code"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Please enter the code you have received"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="healthsphere@gmail.com"
                    android:textColor="@color/blue"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Enter Verification Code"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="18dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/otp1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:paddingTop="30dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/otp_background"
                        android:textAlignment="center"
                        android:inputType="textPassword"
                        />
                    <EditText
                        android:id="@+id/otp2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/otp_background"
                        android:paddingTop="30dp"
                        android:textAlignment="center"
                        android:inputType="textPassword"
                        />
                    <EditText
                        android:id="@+id/otp3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/otp_background"
                        android:paddingTop="30dp"
                        android:textAlignment="center"
                        android:inputType="textPassword"
                        />
                    <EditText
                        android:id="@+id/otp4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:paddingTop="30dp"
                        android:background="@drawable/otp_background"
                        android:textAlignment="center"
                        android:inputType="textPassword"
                        />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Confirm"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:id="@+id/confirmOtp"
                    android:background="@drawable/accountbtn"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="32dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ProgressBar
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:visibility="gone"
                        android:layout_marginTop="100dp"/>
                </LinearLayout>




            </LinearLayout>
        </ScrollView>


    </LinearLayout>



</RelativeLayout>